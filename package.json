{
  "name": "steamworks-node",
  "version": "1.0.0",
  "description": "A wrapper library to call the steamworks API from nodeJS.",
  "main": "index.js",
  "scripts": {
    "test": "node ./index.test.js",
    "prepare": "node ./generate_typings.js",
    "swig": "run-script-os",
    "swig:default": "export SWIG_LIB=$(node -p 'process.cwd()')/swig/lib && ./swig/swig -Isdk/public/steam -javascript -node -c++ -cpperraswarn -includeall ./lib/steam_api.i",
    "swig:win32": ".\\swig\\swig.exe -Isdk/public/steam -javascript -node -c++ -cpperraswarn .\\lib\\steam_api.i",
    "node-gyp": "./node_modules/.bin/node-gyp rebuild",
    "copy-bin": "node ./install.js",
    "preinstall": "node ./preinstall.js",
    "install": "npm-run-all swig node-gyp copy-bin"
  },
  "author": "TheAce0296",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "eslint": "^7.32.0",
    "node-gyp": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "run-script-os": "^1.1.6"
  },
  "dependencies": {
    "fs-extra": "^10.0.0"
  }
}
