{
  "name": "steamworks-node",
  "version": "1.0.0",
  "description": "A wrapper library to call the steamworks API from nodeJS.",
  "main": "index.js",
  "scripts": {
    "test": "node ./index.test.js",
    "build": "npm-run-all preinstall swig node-gyp copy-bin prepare",
    "prepare": "node ./generate_typings.js",
    "swig": "run-script-os",
    "swig:default": "export SWIG_LIB=$(node -p 'process.cwd()')/swig/lib && ./swig/swig -Isteam -javascript -node -c++ -cpperraswarn -includeall ./lib/steam_api.i",
    "swig:win32": ".\\swig\\swig.exe -Isteam -javascript -node -c++ -cpperraswarn .\\lib\\steam_api.i",
    "node-gyp": "npx node-gyp rebuild",
    "copy-bin": "node ./install.js",
    "generate-types": "node ./generate_typings.js",
    "preinstall": "node ./preinstall.js",
    "install": "npm-run-all swig node-gyp copy-bin"
  },
  "author": "TheAce0296",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "eslint": "^8.14.0"
  },
  "dependencies": {
    "decompress": "^4.2.1",
    "decompress-targz": "^4.1.1",
    "fs-extra": "^10.1.0",
    "node-bignumber": "^1.2.2",
    "node-fetch": "^2.6.7",
    "node-gyp": "^8.4.1",
    "npm-run-all": "^4.1.5",
    "prompt-sync": "^4.2.0",
    "run-script-os": "^1.1.6"
  }
}
